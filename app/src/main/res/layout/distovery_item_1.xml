<?xml version="1.0" encoding="utf-8"?>
<!--今日最热图片-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <View
        android:id="@+id/divider_1"
        android:background="@color/main_color_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_item_divider_h"/>

    <View
        android:id="@+id/divider_2"
        android:layout_below="@id/divider_1"
        android:background="@color/main_color_devider_1"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <TextView
        android:id="@+id/tv_1"
        android:includeFontPadding="false"
        android:typeface="normal"
        android:background="@color/main_color_item234"
        android:layout_below="@id/divider_2"
        android:textSize="14sp"
        android:textColor="@color/minghuang"
        android:text="今日热门图片"
        android:drawableLeft="@drawable/icon_home_hot"
        android:drawablePadding="8dp"
        android:paddingLeft="13dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="38dp"/>

    <TextView
        android:id="@+id/tv_2"
        android:includeFontPadding="false"
        android:typeface="normal"
        android:layout_below="@id/divider_2"
        android:textSize="12sp"
        android:textColor="@color/click_bai40"
        android:text="更多"
        android:layout_alignParentRight="true"
        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp"
        android:drawableRight="@drawable/icon_home_open"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="38dp"/>
    <!--<RelativeLayout-->
        <!--android:id="@+id/rl_1"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="38dp">-->
    <!--</RelativeLayout>-->

    <RelativeLayout
        android:id="@+id/rl_img_container"
        android:background="@color/main_color_bg"
        android:paddingBottom="@dimen/home_item_divider_h"
        android:layout_below="@id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </RelativeLayout>
    <View
        android:id="@+id/divider_4"
        android:layout_below="@id/rl_img_container"
        android:background="@color/main_color_devider_2"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</RelativeLayout>