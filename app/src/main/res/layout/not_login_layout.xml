<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/main_color_actionbar_item01"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_avatar"
        android:src="@drawable/img_personal_head"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="44dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_below="@id/iv_avatar"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/bai_50"
        android:textSize="20dp"
        android:includeFontPadding="false"
        android:typeface="normal"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="您还没登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_below="@id/tv_name"
        android:paddingTop="6dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:text=""
        android:lineSpacingExtra="3dp"
        android:textSize="12sp"
        android:includeFontPadding="false"
        android:typeface="normal"
        android:textColor="@color/bai_70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <RelativeLayout
        android:id="@+id/rl_mygallery"
        android:layout_below="@id/tv_desc"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_mygallery_count"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:text="—"
            android:textSize="15sp"
            android:textColor="@color/bai_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_mygallery"
            android:layout_below="@id/tv_mygallery_count"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:text="我的作品"
            android:textSize="10sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/bai_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_personalcenter_myfollow"
        android:layout_below="@id/tv_desc"
        android:layout_toRightOf="@id/rl_mygallery"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_myfollow_count"
            android:text="—"
            android:textSize="15sp"
            android:textColor="@color/bai_30"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_myfollow"
            android:layout_below="@id/tv_myfollow_count"
            android:text="我关注的人"
            android:textSize="10sp"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:layout_marginTop="4dp"
            android:textColor="@color/bai_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_personalcenter_followme"
        android:layout_below="@id/tv_desc"
        android:layout_toRightOf="@id/rl_personalcenter_myfollow"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_followme_count"
            android:layout_marginTop="5dp"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:text="—"
            android:textSize="15sp"
            android:textColor="@color/bai_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_followme"
            android:layout_below="@id/tv_followme_count"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:text="关注我的粉丝"
            android:textSize="10sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/bai_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_not_login_1"
        android:layout_below="@id/rl_mygallery"
        android:textColor="@color/bai_30"
        android:includeFontPadding="false"
        android:typeface="normal"
        android:textSize="14sp"
        android:text="登录后，您的相册、个人资料会显示在这里，展示给别人"
        android:lineSpacingExtra="5dp"
        android:gravity="center"
        android:layout_marginTop="85dp"
        android:layout_centerHorizontal="true"
        android:layout_width="230dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_not_login"
        android:layout_below="@id/tv_not_login_1"
        android:textColor="@color/click_huang_1"
        android:background="@drawable/tv_not_login_bg"
        android:includeFontPadding="false"
        android:typeface="normal"
        android:textSize="14sp"
        android:text="登录/注册"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="220dp"
        android:layout_height="40dp"/>
</RelativeLayout>