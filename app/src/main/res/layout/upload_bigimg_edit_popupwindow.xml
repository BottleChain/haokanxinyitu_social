<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <View
        android:id="@+id/pop_shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/hei_50" />

    <LinearLayout
        android:id="@+id/ll_morepop_sharecontent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <!--android:layout_above="@id/tv_morepop_cancel"-->
        <RelativeLayout
            android:background="@drawable/popwindow_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_popup_msg"
                android:includeFontPadding="false"
                android:typeface="normal"
                android:text="从已选中删除这张照片?"
                android:textSize="12sp"
                android:textColor="@color/hei_60"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="42dp"/>

            <View
                android:id="@+id/devider_1"
                android:background="@color/hei_20"
                android:layout_below="@id/tv_popup_msg"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <TextView
                android:id="@+id/tv_popup_delete"
                android:includeFontPadding="false"
                android:typeface="normal"
                android:layout_below="@id/devider_1"
                android:background="@drawable/popwindow_calcel_bg_selector"
                android:text="删除"
                android:textSize="15sp"
                android:textColor="@color/hei_60"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="47dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_pop_cancel"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:text="@string/cancel"
            android:textColor="@color/hei_60"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/popwindow_calcel_bg_selector"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>
    </LinearLayout>
</RelativeLayout>