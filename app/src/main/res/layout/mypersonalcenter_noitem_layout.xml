<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <!--<View-->
        <!--android:background="@color/main_color_actionbar_item01"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"/>-->

    <ImageView
        android:visibility="invisible"
        android:id="@+id/iv_bottom"
        android:src="@drawable/icon_person_arrow"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="invisible"
        android:id="@+id/tv_click_add"
        android:text="点击添加"
        android:textColor="@color/bai_30"
        android:textSize="15sp"
        android:includeFontPadding="false"
        android:typeface="normal"
        android:layout_centerHorizontal="true"
        android:paddingBottom="15dp"
        android:layout_marginTop="55dp"
        android:layout_above="@id/iv_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_noablum"
        android:text="没有发布任何组图"
        android:textColor="@color/bai_30"
        android:textSize="15sp"
        android:includeFontPadding="false"
        android:typeface="normal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_above="@id/tv_click_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_above="@id/tv_noablum"
        android:src="@drawable/img_pics_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>