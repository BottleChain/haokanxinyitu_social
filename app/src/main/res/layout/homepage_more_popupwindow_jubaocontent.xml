<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <!--android:layout_above="@id/tv_morepop_cancel"-->
    <LinearLayout
        android:background="@drawable/popwindow_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_jubao_1"
            android:text="色情暴力"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:textColor="@color/click_hei50"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="49dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/hei_10"/>
        <TextView
            android:id="@+id/tv_jubao_2"
            android:text="诽谤,语言攻击"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:textColor="@color/click_hei50"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="49dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/hei_10"/>
        <TextView
            android:id="@+id/tv_jubao_3"
            android:text="广告推销"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:textColor="@color/click_hei50"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="49dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/hei_10"/>
        <TextView
            android:id="@+id/tv_jubao_4"
            android:text="违反服务条款"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:textColor="@color/click_hei50"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="49dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/hei_10"/>
        <TextView
            android:id="@+id/tv_jubao_5"
            android:text="其他"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:textColor="@color/click_hei50"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="49dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/hei_10"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_pop_cancel"
        android:text="@string/cancel"
        android:textColor="@color/hei_60"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/popwindow_calcel_bg_selector"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
</LinearLayout>