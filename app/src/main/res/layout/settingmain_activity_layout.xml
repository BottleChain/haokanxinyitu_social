<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
  android:orientation="vertical"
  android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/main_color_actionbar_item01"
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_h">

        <ImageButton
            android:id="@+id/ib_back"
            android:background="@null"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/icon_back_white_selector"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_title"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="设置"
            android:textSize="15sp"
            android:textColor="@color/click_bai80"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <View
        android:background="@color/main_color_bg"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>

    <RelativeLayout
        android:id="@+id/rl_setting_avatar"
        android:clickable="true"
        android:background="@drawable/settingitem_bg_selector"
        android:layout_width="match_parent"
        android:layout_height="69dp">

        <ImageView
            android:id="@+id/iv_avatar"
            android:src="@drawable/icon_login_photo"
            android:paddingLeft="14dp"
            android:paddingRight="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="69dp"
            android:layout_height="69dp"/>

        <TextView
            android:id="@+id/tv_setting_name"
            android:layout_toRightOf="@id/iv_avatar"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="110dp"
            android:layout_centerVertical="true"
            android:textColor="@color/bai_30"
            android:textSize="14sp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_edit"
            android:layout_centerVertical="true"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/icon_upload_right_jiantou"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="@color/bai_30"
            android:textSize="13sp"
            android:text="编辑个人资料"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:background="@color/main_color_bg"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
<!--?attr/listChoiceBackgroundIndicator-->
        <!--android:background="?android:listChoiceBackgroundIndicator"-->
    <RelativeLayout
        android:id="@+id/rl_setting_about"
        android:background="@drawable/settingitem_bg_selector"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/bai_50"
            android:textSize="14sp"
            android:text="关于"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/icon_upload_right_jiantou"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--<View-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:background="@color/main_color_bg"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_marginLeft="15dp"-->
            <!--android:layout_marginRight="15dp"-->
            <!--android:layout_height="2dp"/>-->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_setting_suggestion"
        android:clickable="true"
        android:background="@drawable/settingitem_bg_selector"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/bai_50"
            android:textSize="14sp"
            android:text="意见反馈"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/icon_upload_right_jiantou"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--<View-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:background="@color/main_color_bg"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_marginLeft="15dp"-->
            <!--android:layout_marginRight="15dp"-->
            <!--android:layout_height="2dp"/>-->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_setting_clearcache"
        android:clickable="true"
        android:background="@drawable/settingitem_bg_selector"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/bai_50"
            android:textSize="14sp"
            android:text="清除缓存"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_clear_cache"
            android:textColor="@color/bai_30"
            android:textSize="13sp"
            android:text="loading..."
            android:layout_centerVertical="true"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/icon_upload_right_jiantou"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:background="@color/main_color_bg"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>

    <RelativeLayout
        android:id="@+id/rl_setting_exit"
        android:clickable="true"
        android:background="@drawable/settingitem_bg_selector"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/bai_60"
            android:textSize="14sp"
            android:text="退出登录"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:background="@color/main_color_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>