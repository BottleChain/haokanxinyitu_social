<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai">
    <RelativeLayout
        android:id="@+id/rl_header"
        android:background="@color/hei"
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <ImageButton
            android:id="@+id/ib_back"
            android:background="@null"
            android:paddingLeft="20dp"
            android:paddingBottom="15dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/icon_back_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:text="确认"
            android:textSize="14sp"
            android:textColor="@color/click_huang_2"
            android:padding="17dp"
            android:layout_marginRight="2dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <com.haokan.xinyitu.upload.MyEditText
        android:id="@+id/et_upload_edit"
        android:layout_below="@id/rl_header"
        android:hint="请输入您照片的标签"
        android:inputType="none"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="12dp"
        android:paddingBottom="5dp"
        android:lineSpacingExtra="3dp"
        android:maxLength="150"
        android:gravity="start"
        android:background="@color/touming"
        android:textColorHint="@color/hei_20"
        android:textSize="16sp"
        android:textColor="@color/hei"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/tv_textcount"
        android:layout_below="@id/et_upload_edit"
        android:gravity="right"
        android:paddingBottom="10dp"
        android:paddingRight="15dp"
        android:background="@color/touming"
        android:textSize="14sp"
        android:text="0/5个"
        android:textColor="@color/hei_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/devider_1"
        android:layout_below="@id/tv_textcount"
        android:background="#e7e7e7"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <TextView
        android:id="@+id/tv_usedtags"
        android:layout_below="@id/devider_1"
        android:text="曾经用过的标签"
        android:textSize="13sp"
        android:textColor="@color/hei_30"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/rl_usedtags"
        android:layout_below="@id/tv_usedtags"
        android:layout_marginTop="17dp"
        android:paddingBottom="16dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <View
        android:id="@+id/devider_2"
        android:layout_below="@id/rl_usedtags"
        android:background="#e7e7e7"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <TextView
        android:id="@+id/tv_hottags"
        android:layout_below="@id/devider_2"
        android:text="热门标签"
        android:textSize="13sp"
        android:textColor="@color/hei_30"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/rl_hottags"
        android:layout_below="@id/tv_hottags"
        android:layout_marginTop="17dp"
        android:paddingBottom="16dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </RelativeLayout>

</RelativeLayout>