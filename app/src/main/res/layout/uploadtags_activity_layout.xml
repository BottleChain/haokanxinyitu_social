<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:background="@color/hei"
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <ImageButton
            android:id="@+id/ib_back"
            android:background="@null"
            android:paddingLeft="20dp"
            android:paddingBottom="15dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/icon_back_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:text="确认"
            android:textSize="14sp"
            android:textColor="@color/click_huang_2"
            android:padding="17dp"
            android:layout_marginRight="2dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tags_main"
        android:background="@color/bai"
        android:layout_below="@id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_added"
            android:text="已添加标签(0/5)"
            android:textSize="13sp"
            android:textColor="@color/hei_70"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/rl_tags_container"
            android:layout_below="@id/tv_added"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_width="match_parent"
            android:layout_height="103dp">
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/divider_1"
        android:layout_below="@id/rl_tags_main"
        android:background="#e9e9e9"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <ScrollView
        android:layout_below="@id/divider_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_usedtags"
                android:text="曾经用过的标签"
                android:textSize="13sp"
                android:textColor="@color/hei_60"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:id="@+id/rl_usedtags"
                android:layout_below="@id/tv_usedtags"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_hottags"
                android:layout_below="@id/rl_usedtags"
                android:text="热门标签"
                android:textSize="13sp"
                android:textColor="@color/hei_60"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:id="@+id/rl_hottags"
                android:layout_below="@id/tv_hottags"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:fitsSystemWindows="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/touming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_edit_container"
            android:background="@color/bai"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="49dp">
            <TextView
                android:id="@+id/tv_click_add_tag"
                android:text="添加"
                android:textColor="@color/hei_20"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/et_upload_edit"
                android:hint="请输入您照片的标签"
                android:inputType="none"
                android:maxLength="15"
                android:singleLine="true"
                android:background="@drawable/addtag_edittext_bg"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_toLeftOf="@id/tv_click_add_tag"
                android:layout_centerVertical="true"
                android:textColorHint="@color/hei_20"
                android:textSize="16sp"
                android:textColor="@color/hei"
                android:layout_width="match_parent"
                android:layout_height="34dp"/>
            </RelativeLayout>

        <View
            android:id="@+id/divider_2"
            android:layout_above="@id/rl_edit_container"
            android:background="#e9e9e9"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </RelativeLayout>

    <!--<ScrollView-->
        <!--android:fitsSystemWindows="true"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->
    <!--</ScrollView>-->
</RelativeLayout>