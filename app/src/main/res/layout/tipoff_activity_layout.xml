<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:background="@color/main_color_actionbar_item01"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_h">

        <ImageButton
            android:id="@+id/ib_back"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:paddingLeft="20dp"
            android:paddingRight="17dp"
            android:src="@drawable/icon_back_white_selector"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_upload_pickfolder"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:text="举报'xxxxxxxxxxxxxxxxxxxxx'的图片色情暴力"
            android:textSize="15sp"
            android:textColor="@color/click_bai"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="60dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:text="提交"
            android:textSize="14sp"
            android:textColor="@color/click_huang_2"
            android:paddingLeft="17dp"
            android:paddingRight="20dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/rl_header"
        android:orientation="vertical"
        android:background="@color/main_color_actionbar_item01"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <EditText
            android:id="@+id/et_jubao_1"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:textColor="@color/hei_70"
            android:textColorHint="@color/hei_20"
            android:hint="请简要说明其内容违反情况"
            android:gravity="start"
            android:padding="10dp"
            android:background="@drawable/edittext_bai_bg"
            android:layout_width="match_parent"
            android:layout_height="145dp"/>

        <TextView
            android:includeFontPadding="false"
            android:typeface="normal"
            android:text="您的联系方式"
            android:textSize="14sp"
            android:textColor="@color/bai_50"
            android:padding="12dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_jubao_2"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:textColor="@color/hei_70"
            android:textColorHint="@color/hei_20"
            android:hint="juliyue@levect.com"
            android:singleLine="true"
            android:padding="10dp"
            android:background="@drawable/edittext_bai_bg"
            android:layout_width="match_parent"
            android:layout_height="54dp"/>

        <TextView
            android:includeFontPadding="false"
            android:typeface="normal"
            android:text="核查属实，我们会对该图册内容进行处理"
            android:textSize="12sp"
            android:textColor="@color/bai_50"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</RelativeLayout>