<?xml version="1.0" encoding="utf-8"?>
<!--用户产生的内容-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="59dp">

    <TextView
        android:id="@+id/tv_failed_album"
        android:background="@drawable/settingitem_bg_selector"
        android:gravity="center_vertical"
        android:paddingLeft="17dp"
        android:text="您有图册上传失败，马上去处理吧"
        android:textSize="14sp"
        android:textColor="@color/shihuang"
        android:drawablePadding="4dp"
        android:drawableLeft="@drawable/icon_notice_attention"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <ImageView
        android:src="@drawable/icon_upload_right_jiantou"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>

    <View
        android:id="@+id/divider_2"
        android:layout_below="@id/tv_failed_album"
        android:background="@color/hei"
        android:layout_width="match_parent"
        android:layout_height="9dp"/>

    <View
        android:id="@+id/divider_1"
        android:layout_below="@id/tv_failed_album"
        android:background="@color/main_color_devider_2"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</RelativeLayout>