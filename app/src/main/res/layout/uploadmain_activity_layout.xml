<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/main_color_bg"
    >
    <RelativeLayout
        android:id="@+id/rl_header"
        android:background="@color/main_color_actionbar_item01"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_h">

        <TextView
            android:id="@+id/tv_cancel"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:text="取消"
            android:textSize="14sp"
            android:textColor="@color/click_bai"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:text="发布"
            android:textSize="14sp"
            android:textColor="@color/click_huang_2"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center"
            android:layout_marginRight="2dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.rockerhieu.emojicon.EmojiconEditText
                android:id="@+id/et_edit"
                android:includeFontPadding="false"
                android:textCursorDrawable="@drawable/text_cursor_holo_light"
                android:typeface="normal"
                android:hint="描述一下您的作品吧"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="8dp"
                android:paddingBottom="5dp"
                android:lineSpacingExtra="3dp"
                android:maxLength="150"
                android:gravity="start"
                android:background="@color/bai"
                android:textColorHint="@color/hei_20"
                android:textSize="15sp"
                android:textColor="@color/hei"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

            <TextView
                android:id="@+id/tv_textcount"
                android:includeFontPadding="false"
                android:typeface="normal"
                android:layout_below="@id/et_edit"
                android:gravity="right"
                android:paddingBottom="10dp"
                android:paddingRight="15dp"
                android:background="@color/bai"
                android:textSize="14sp"
                android:text="0/150"
                android:textColor="@color/hei_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/devider_1"
                android:layout_below="@id/tv_textcount"
                android:background="#d8d8d8"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <RelativeLayout
                android:id="@+id/rl_uploadmian_addtag"
                android:layout_below="@id/devider_1"
                android:layout_width="match_parent"
                android:paddingBottom="7dp"
                android:paddingLeft="7dp"
                android:paddingTop="7dp"
                android:background="@drawable/rl_bg_selector_bai"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_right_jiantou"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/icon_upload_right_jiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:id="@+id/rl_uploadmian_addtag_container"
                    android:layout_toLeftOf="@id/iv_right_jiantou"
                    android:layout_marginRight="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_add_tag"
                        android:includeFontPadding="false"
                        android:typeface="normal"
                        android:text="# 点击添加标签"
                        android:textSize="14sp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:textColor="@color/hei_40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/devider_2"
                android:layout_below="@id/rl_uploadmian_addtag"
                android:background="#f4f4f4"
                android:layout_width="match_parent"
                android:layout_height="6dp"/>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_uploadmian_location"
                android:layout_below="@id/devider_2"
                android:layout_width="match_parent"
                android:background="@drawable/rl_bg_selector_bai"
                android:layout_height="44dp">

                <TextView
                    android:text="所在位置"
                    android:includeFontPadding="false"
                    android:typeface="normal"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:textColor="@color/hei_40"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/icon_upload_location_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/icon_upload_right_jiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <View
                android:visibility="gone"
                android:id="@+id/devider_3"
                android:layout_below="@id/rl_uploadmian_location"
                android:background="#f4f4f4"
                android:layout_width="match_parent"
                android:layout_height="6dp"/>

            <TextView
                android:id="@+id/tv_uploadmain_goonadd"
                android:includeFontPadding="false"
                android:typeface="normal"
                android:layout_below="@id/devider_3"
                android:background="@color/main_color_bg"
                android:text="+  继续添加"
                android:textColor="@color/click_bai60"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>

                <!--android:layout_below="@id/tv_uploadmain_goonadd"-->
                <RelativeLayout
                    android:id="@+id/rl_uploadmain"
                    android:layout_below="@id/tv_uploadmain_goonadd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>