<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:id="@+id/ll_bottom_bar"
        android:orientation="horizontal"
        android:background="@color/main_color_bg"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="48dp">
        <ImageButton
            android:id="@+id/iv_bottom_bar_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:background="@color/touming"
            android:src="@drawable/btn_home_home_selector"
            android:layout_height="match_parent"/>
        <ImageButton
            android:id="@+id/iv_bottom_bar_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:background="@color/touming"
            android:src="@drawable/btn_home_followed_selector"
            android:layout_height="match_parent"/>
        <ImageButton
            android:id="@+id/iv_bottom_bar_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:background="@color/touming"
            android:src="@drawable/btn_home_upload_selector"
            android:layout_height="match_parent"/>
        <ImageButton
            android:id="@+id/iv_bottom_bar_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:background="@color/touming"
            android:src="@drawable/btn_home_active_selector"
            android:layout_height="match_parent"/>
        <ImageButton
            android:id="@+id/iv_bottom_bar_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:background="@color/touming"
            android:src="@drawable/btn_home_mine_selector"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_above="@id/ll_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
    <View
        android:background="#242424"
        android:layout_above="@id/ll_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</RelativeLayout>