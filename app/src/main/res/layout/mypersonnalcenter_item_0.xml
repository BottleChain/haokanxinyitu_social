<?xml version="1.0" encoding="utf-8"?>
<!--用户产生的内容-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <!-- 填充图片的内容区域 -->
    <RelativeLayout
        android:background="@color/hei"
        android:id="@+id/rl_img_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rl_img_container"
        android:background="@color/main_color_actionbar_item01"
        android:paddingBottom="@dimen/home_item_paddingbottom"
        android:paddingTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.rockerhieu.emojicon.EmojiconTextView
            android:id="@+id/tv_desc"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:paddingTop="12dp"
            android:textColor="@color/bai_50"
            android:textSize="15sp"
            android:lineSpacingExtra="3dp"
            android:text="周六带妹子去拍照，只有这张比较好"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_tag_1"
            android:layout_below="@id/tv_desc"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/icon_home_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/rl_tag_container"
            android:layout_below="@id/tv_desc"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </RelativeLayout>

        <!--android:padding="10dp"-->
        <!--android:src="@drawable/btn_home_more_selector"-->
        <!--<TextView-->
        <!--android:id="@+id/ib_item0_more"-->
        <!--android:background="@null"-->
        <!--android:layout_below="@id/rl_3"-->
        <!--android:layout_marginTop="7dp"-->
        <!--android:drawableTop="@drawable/btn_home_more_selector"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginRight="5dp"-->
        <!--android:paddingTop="8dp"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="34dp"/>-->

        <ImageButton
            android:visibility="invisible"
            android:id="@+id/ib_item0_more"
            android:background="@null"
            android:src="@drawable/btn_home_more_selector"
            android:layout_below="@id/rl_tag_container"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="18dp"
            android:layout_marginTop="3dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_like_1"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:layout_below="@id/rl_tag_container"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:text="17"
            android:layout_toLeftOf="@id/ib_item0_more"
            android:textSize="14sp"
            android:textColor="@color/bai_60"
            android:drawableLeft="@drawable/btn_home_like_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_comment_1"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:layout_below="@id/rl_tag_container"
            android:layout_marginTop="5dp"
            android:layout_marginRight="18dp"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:text="17"
            android:textSize="14sp"
            android:layout_toLeftOf="@id/tv_like_1"
            android:textColor="@color/bai_60"
            android:drawableLeft="@drawable/btn_home_comment_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>