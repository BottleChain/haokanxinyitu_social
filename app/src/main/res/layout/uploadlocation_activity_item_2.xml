<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bai">

    <View
        android:id="@+id/devider_1"
        android:background="#e7e7e7"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="14dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_locationitem_title"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:text="亮马桥路56号"
            android:textSize="16sp"
            android:textColor="@color/hei_80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_locationitem_sub"
            android:includeFontPadding="false"
            android:typeface="normal"
            android:text="北京市朝阳区亮马桥路56号"
            android:textSize="12sp"
            android:textColor="@color/hei_50"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_locationitem_select"
        android:src="@drawable/icon_upload_selected"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>